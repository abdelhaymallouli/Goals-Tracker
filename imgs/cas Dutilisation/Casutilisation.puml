@startuml
left to right direction
actor "Visiteur" as Visiteur
actor "Admin" as Admin

package "Goals Tracker ( les objectifs)" {
    usecase "Consulter la page d'accueil" as UC_Accueil
    usecase "Voir les détails des objectifs" as UC_Details
    
    usecase "Gérer les objectifs (CRUD)" as UC_CRUD
    usecase "Filtrer  objectifs" as UC_Filtrer
    usecase "Rechercher des objectifs" as UC_Rechercher
}

' Relations Visiteur
Visiteur -- UC_Accueil
UC_Accueil <.. UC_Details : <<extend>>

' Relations Admin
Admin -- UC_CRUD
UC_CRUD <.. UC_Filtrer : <<extend>>
UC_CRUD <.. UC_Rechercher : <<extend>>

@enduml
